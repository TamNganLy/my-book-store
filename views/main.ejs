
    <!-- Hero -->
    <%- include("hero")%>

    <div class="quote-container">
      <img
        src="/images/cherry-blossom-branch.png"
        alt="break image"
        height="75"
      />
      <p class="quote">"So many books, so little time."</p>
      <p class="quote-author">FRANK ZAPPA</p>
    </div>

    <!-- Book shelves -->
    <section class="container">
      <ul class="row">
        <% books.forEach(book => { %>
        <li class="col-xl-3 col-lg-4 col-md-6 col-sm-6 book-grid">
          <a href="/isbn/<%= book.id %>">
            <div class="my-container" >
              <div class="book">
                <div class="front">
                  <div class="cover">
                    <img
                      src="https://covers.openlibrary.org/b/isbn/<%= book.id %>-M.jpg"
                      alt="<%= book.title %>"
                    />
                  </div>
                </div>
                <div class="left-side">
                  <img
                    src="https://covers.openlibrary.org/b/isbn/<%= book.id %>-M.jpg"
                    alt="<%= book.title %>"
                  />
                </div>
              </div>
              <p class="book-title"><%= book.title %></p>
            </div>
          </a>
          <p class="book-rate">Rate: <%= book.rate %>/5</p>
        </li>
        <% }) %>
      </ul>
    </section>